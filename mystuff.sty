% Paired delimiters
\DeclarePairedDelimiterX\norm[1]\lVert\rVert{\ifblank{#1}{\:\cdot\:}{#1}} % Norm
\DeclarePairedDelimiterX\abs[1]\lvert\rvert{\ifblank{#1}{\:\cdot\:}{#1}} % Absolute value
\DeclarePairedDelimiterX\duality[2]{\langle}{\rangle}{#1 , #2} % Duality/inner product

% Derivatives
\newcommand\dv[3][]{\frac{\mathrm{d}^{#1} #2}{\mathrm{d}#3^{#1}}} % One-variable or total derivative
\newcommand\pdv[3][]{\frac{\partial^{#1} #2}{\partial #3^{#1}}} % Partial derivative
\newcommand\dd[1]{\,\mathrm{d}#1} % Differential

% Vector analysis operators
\newcommand\grad{\nabla} % Gradient
\newcommand\lap{\Delta} % Laplacian
